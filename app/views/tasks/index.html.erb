<% if user_signed_in?%>
  <p style="color: green"><%= notice %></p>

  <h1>Tasks</h1>
  <%= link_to "New task", new_task_path, type:"button", id: "btn-add", class: "btn btn-lg btn-primary" %>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <% if current_user.id == task.user_id && task.completed == false%>
        <%= render task %>
      <%end%>  
    <% end %>
  </div>

<%end%>

