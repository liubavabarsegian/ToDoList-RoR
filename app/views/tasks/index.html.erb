<% if user_signed_in?%>
  <p style="color: green"><%= notice %></p>

  <h1>Tasks</h1>
  <%= link_to "New task", new_task_path, type:"button", id: "btn-add", class: "btn btn-lg btn-primary" %>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <% if current_user.id == task.user_id%>
        <%= render task %>
        <p>
          <%= link_to "Show this task", task %>
        </p>
      <%end%>  
    <% end %>
  </div>
<%end%>

