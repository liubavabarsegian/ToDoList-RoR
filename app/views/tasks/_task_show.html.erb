<div class = "task_show">
<strong>Title:</strong>
<%= task.title %>
<br/>
<strong>Description:</strong>
<%= task.description %>
<br/>
<strong>Due:</strong>
<%= task.due %>
<br/>
<% if user_signed_in?%>
    <strong>User id:</strong>
    <%= task.user_id %>
<%end%>
<br/>
<strong>Completed:</strong>
<%= task.completed %>
<br/>
<div>
    <%= button_to "Mark as completed", complete_path(task: task), class: 'btn btn-outline-primary' %>
    <%= link_to "Edit this tasks", edit_task_path(task), class: 'btn btn-primary' %> <br/>
    <%= button_to "Destroy this task", task, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: 'btn btn-outline-danger'%>
</div>
</div>