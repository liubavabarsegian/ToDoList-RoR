<%= form_with(model: user, class: "form") do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nick, style: "display: block" %>
    <%= form.text_field :nick, id: "su-nick", class: "form-control" %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, id: "su-name", class: "form-control" %>
  </div>

  <div>
    <%= form.label :surname, style: "display: block" %>
    <%= form.text_field :surname, id: "su-surname", class: "form-control" %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, id: "su-email", class: "form-control", type: "email" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.text_field :password, id: "su-password", type: "password", class: "form-control" %>
  </div>
  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.text_field :password_confirmation, id: "su-password-conf", type: "password", class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Sign Up", class: "btn btn-success btn-lg"%>
  </div>
<% end %>
