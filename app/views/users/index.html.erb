<p style="color: green"><%= notice %></p>

<h1><%=t(:users)%></h1>

<div id="users">
  <% @users.each do |user| %>
    <div id="<%= dom_id user %>" class = "user">
      <p>
        <strong><%=t(:nick)%>:</strong>
        <%= user.nick %>
      </p>
      <p>
      <%= link_to t(:show_this_user), user, class: 'link'%>
    </p>
    </div>
  <% end %>
</div>
