<%=link_to "Week Calendar", week_path, type: "button", class: 'btn btn-primary'%>

<%# <input id="toggle-on" class="toggle toggle-left" name="toggle" value="false" type="radio" checked>
<label for="toggle-on" class="btn">Week</label>
<input id="toggle-off" class="toggle toggle-right" name="toggle" value="true" type="radio">
<label for="toggle-off" class="btn">Month</label> %>


<%= month_calendar(events: @tasks) do |date, tasks| %>
  <%= date %>

  <% tasks.each do |tasks| %>
    <% if tasks.completed %>
      <div style="text-decoration: line-through">
        <%= tasks.title %>
      </div>
    <%else%>
      <div>
        <%= tasks.title %>
    <%end%>
        <div class="box">
          <a class="button"  href="#month<%= dom_id tasks %>">ShowTask</a>
        </div>

        <div id = "month<%= dom_id tasks %>" class="overlay">
          <div class="popup">
          <a class="close" href="#">&times;</a>
            <div class= "content">
              <strong>Title:</strong>
                <%= tasks.title %>
                <br/>
                <strong>Due:</strong>
                <%= tasks.due %>
                <% if user_signed_in?%>
                  <strong>User id:</strong>
                  <%= tasks.user_id %>
                <%end%>
                <strong>Completed:</strong>
                <%= tasks.completed %>

                <div>
                  <%= link_to "Edit this tasks", edit_task_path(tasks) %> |
                  <%= link_to "Back to tasks", tasks_path %>

                  <%= button_to "Destroy this tasks", tasks, method: :delete %>
                </div>
              
            </div>
          </div>

        </div>
  <% end %>
<% end %>