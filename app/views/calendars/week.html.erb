<%=link_to "Month Calendar", month_path, type: "button", class: 'btn btn-primary'%>
<%= week_calendar(events: @tasks) do |date, tasks| %>
  <%= date %>

  <% tasks.each do |tasks| %>
  <%if tasks.user_id == current_user.id%>
    <% if tasks.completed %>
      <div style="text-decoration: line-through">
        <%= tasks.title %>
      </div>
    <%else%>
      <div>
        <%= tasks.title %>
      </div>
    <%end%>
        <div class="box">
          <a class="button"  href="#month<%= dom_id tasks %>">ShowTask</a>
        </div>

        <div id = "month<%= dom_id tasks %>" class="overlay">
          <div class="popup">
          <a class="close" href="#">&times;</a>
            <div class= "content">
              <strong>Title:</strong>
                <%= tasks.title %>
                <br/>
                <strong>Due:</strong>
                <%= tasks.due %>
                <% if user_signed_in?%>
                  <strong>User id:</strong>
                  <%= tasks.user_id %>
                <%end%>
                <strong>Completed:</strong>
                <%= tasks.completed %>

                <div>
                  <%= link_to "Edit this tasks", edit_task_path(tasks) %> |
                  <%= link_to "Back to tasks", tasks_path %>

                  <%= button_to "Destroy this tasks", tasks, method: :delete %>
                </div>
              
            </div>
          </div>

        </div>
  <% end %>
  <%end%>
<% end %>