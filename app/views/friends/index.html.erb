<p style="color: green"><%= notice %></p>


<h1>New friend requests!</h1>
<%=link_to "See other users", users_path, class: 'btn btn-outline-primary'%>
<div id="requests">
  <% @requests.each do |request| %>
    <div id="<%= dom_id request %>" class = "friend">
      <% @user = User.where(id: request.user_id)[0]%>
      <p>
        <strong>Nick:</strong>
        <%= @user.nick %>
      </p>
      <%= render "friends/accept_request", locals: {friend_id: @user.id, user_id: current_user.id} %>
    </div>
  <% end %>
</div>

<h1>Friends</h1>
<div id="friends">
  <% @friends.each do |friend| %>
    <div id="<%= dom_id friend %>" class = "friend">
      <% @user = User.where(id: friend.user_id)[0]%>
      <p>
        <strong>Nick:</strong>
        <%= @user.nick %>
      </p>
      <p>
      <%= link_to "Show this friend", @user, class: 'link'%>
    </p>
    </div>
  <% end %>
</div>

